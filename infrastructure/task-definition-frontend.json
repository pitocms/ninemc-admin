{
    "family": "ninemc-production-frontend",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::941240939468:role/ninemc-production-ecs-execution-role",
    "taskRoleArn": "arn:aws:iam::941240939468:role/ninemc-production-ecs-task-role",
    "containerDefinitions": [
      {
        "name": "frontend",
        "image": "941240939468.dkr.ecr.eu-west-1.amazonaws.com/ninemc-production-frontend:latest",
        "portMappings": [
          {
            "containerPort": 3000,
            "protocol": "tcp"
          }
        ],
        "environment": [
          {
            "name": "NODE_ENV",
            "value": "production"
          },
          {
            "name": "PORT",
            "value": "3000"
          },
          {
            "name": "NEXT_PUBLIC_API_URL",
            "value": "https://api.ninemc.io/api"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/ninemc-production-frontend",
            "awslogs-region": "eu-west-1",
            "awslogs-stream-prefix": "ecs"
          }
        },
        "healthCheck": {
          "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3000/ || exit 1"],
          "interval": 30,
          "timeout": 5,
          "retries": 3,
          "startPeriod": 60
        }
      }
    ]
  }