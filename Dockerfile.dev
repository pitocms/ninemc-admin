FROM node:20-alpine

# Install dependencies
RUN apk add --no-cache libc6-compat

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json yarn.lock* ./

# Install dependencies
RUN yarn install

# Copy source code
COPY . .

# Expose port (matches: `next dev ... -p 3000`)
EXPOSE 3000

# Start development server
CMD ["yarn", "dev"]


